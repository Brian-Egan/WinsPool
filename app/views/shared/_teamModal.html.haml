.modal-dialog
	.modal-content
		.modal-header
			%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
			%h4.modal-title #{u.owner}
		.modal-body
			%table.table.table-striped.table-condensed.table-bordered
				%tr
					%th.col-md-1.col-sm-1.col-xs-1 Pick
					%th.col-md-5.col-sm-1.col-xs-1 Team
					%th.col-md-1.col-sm-1.col-xs-1.text-center W
					%th.col-md-1.col-sm-1.col-xs-1.text-center L
					%th.col-md-1.col-sm-1.col-xs-1.text-center T
					%th.col-md-2.col-sm-2.col-xs-2.text-center Win %
				- i = 1
				- u.teams.each do |t|
					%tr
						%td #{i}
						%td #{t.city} #{t.name}
						%td.text-center #{t.wins}
						%td.text-center #{t.losses}
						%td.text-center #{t.ties}
						- @winp = t.wins.to_f/(t.wins.to_f + t.losses.to_f + t.ties.to_f)
						- if @winp > 0
							- if @winp < 1
								%td.text-center .#{(@winp * 1000)}
							- else 
								%td.text-center #{@winp.to_i * 1000}
						- else 
							%td.text-center .000
						- i =+ 1
		.modal-footer
			%button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
			-# %button.btn.btn-primary{:type => "button"} Save changes