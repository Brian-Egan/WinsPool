#UserTeams.col-md-10.col-md-offset-1.col-sm-12.col-xs-12
	%table{:class => 'table table-striped table-hover'}
		%tr
			%th.col-md-5.col-md-offset-1.col-sm-5.col-xs-5.text-left Team
			%th.col-md-1.col-sm-1.col-xs-1.text-center Win
			%th.col-md-1.col-sm-1.col-xs-1.text-center   Loss
			%th.col-md-1.col-sm-1.col-xs-1.text-center   Tie
			%th.col-md-2.col-sm-2.col-xs-2.text-center  Win %
		- u.teams.each do |t|
			%tr
				%td.text-left
					%h4 #{t.city} #{t.name}
				%td.text-center
					%h4 #{t.wins}
				%td.text-center
					%h4 #{t.losses}
				%td.text-center
					%h4 #{t.ties}
				- getUserWinPercent(t.wins, t.losses, t.ties)
				%td.text-center
					%h4.text-center #{@wP} 