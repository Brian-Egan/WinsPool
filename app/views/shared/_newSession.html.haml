
= form_tag '/login' do
	.form-group
		%h4.col-md-2.control-label.text-center Email:
		.col-md-8
			= text_field_tag :email, nil, :class => 'form-control col-md-8'
	.form-group
		%h4.col-md-2.control-label.text-center{:for => "inputPassword1"} Password:
		.col-md-8
			= password_field_tag :password, nil, :class => 'form-control'
	= submit_tag "Sign In", :class => "btn btn-primary btn-large col-md-2 col-md-offset-8 col-xs-12 col-sm-12 usrSubmitBtn"