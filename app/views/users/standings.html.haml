.jumbotron.headerJumbo
	%h1 Standings

#UserTeams.col-md-10.col-md-offset-1.col-sm-12.col-xs-12
	%table{:class => 'table table-striped table-hover'}
		%tr
			%th.col-md-5.col-md-offset-1.col-sm-5.col-xs-5.text-left Player
			%th.col-md-1.col-sm-1.col-xs-1.text-center Win
			%th.col-md-1.col-sm-1.col-xs-1.text-center   Loss
			%th.col-md-1.col-sm-1.col-xs-1.text-center   Tie
			%th.col-md-2.col-sm-2.col-xs-2.text-center  Win %
		- @users.each do |u|
			%tr
				%td.text-left.playerTeam{:"data-userid" => "#{u.id}" } #{u.owner}
				%td.text-center #{u.wins}
				%td.text-center #{u.losses}
				%td.text-center #{u.ties}
				- if u.wins > 0 || u.losses > 0 || u.ties > 0
					- @gms = u.wins + u.losses + u.ties
					- @winp = u.wins.to_f/@gms.to_f
					%td.text-center #{@winp.to_f}
				- else
					%td.text-center .000%


