.jumbotron.headerJumbo
	.row
		.col-md-6.col-xs-6.col-sm-6
			-# %h2{:class => "col-md-5 textRight"} Round
			%h1{:class => "text-left"} #{@user.owner}
		.col-md-6.col-xs-6.col-sm-6
			%h2{:class => "col-md-5 textRight"} Wins
			%h1{:class => "text-center"} #{@user.wins}

	#UserRecord{:class => 'panel panel-success col-md-11 col-sm-11 col-xs-11 row'}
		%div{:class => 'panel-heading col-md-2 col-sm-12 col-xs-12 recordHeader'}
			%h3{:class => 'text-center'} Record
		
		%div{:class => ' col-md-10 col-xs-12 col-sm-12', :id => 'userRecordTable'}
			%table{:class => 'table table-striped table-hover'}
				%thead
					%th
						%h5{:class => 'text-center'} Win
					%th
						%h5{:class => 'text-center'} Loss
					%th
						%h5{:class => 'text-center'} Tie
					%th
						%h5{:class => 'text-center'} Win %
				%tr
					%th
						%h4{:class => 'text-center'} #{@user.wins}
					%th
						%h4{:class => 'text-center'} #{@user.losses}
					%th
						%h4{:class => 'text-center'} #{@user.ties}
					%th
						- if @user.win_percent.nan?
							%h4{:class => 'text-center'} .000
						- else
							%h4{:class => 'text-center'} #{number_to_percentage(@user.win_percent, precision: 3)}

