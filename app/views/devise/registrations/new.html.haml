%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
	= devise_error_messages!
	#AccountDiv.col-md-offset-1.col-md-10.col-xs-12.col-xm-12.panel.panel-success.form-horizontal
		.form-group
			%h4.col-md-2.control-label.text-center{:for => "inputOwner1"} Name:
			.col-md-10
				= f.text_field :owner, :class => 'form-control', :placeholder => 'Name', :id => 'inputOwner1', :autofocus => true
		.form-group
			%h4.col-md-2.control-label.text-center{:for => "inputEmail1"} Email:
			.col-md-10
				= f.email_field :email, :class => 'form-control', :placeholder => 'Email', :id => 'inputEmail1'
		.form-group
			%h4.col-md-2.control-label.text-center{:for => "inputPassword1"} Password:
			.col-md-10
				= f.password_field :password, :class => 'form-control', :placeholder => 'Password', :id => 'inputPassword1', :autocomplete => "off"
		.form-group
			%h4.col-md-2.control-label.text-center{:for => "inputPassword2"} Confirm Password:
			.col-md-10
				= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirm Password', :id => 'inputPassword2', :autocomplete => "off"
		-# %div
		-# 	= f.label :email
		-# 	%br/
		-# 	= f.email_field :email, :autofocus => true
		-# %div
		-# 	= f.label :password
		-# 	%br/
		-# 	= f.password_field :password
		-# %div
		-# 	= f.label :password_confirmation
		-# 	%br/
		-# 	= f.password_field :password_confirmation
